<div class="subscribed">
  <h3><%= t('.latest_updates') %></h3><%= link_to image_tag("feed.png"), dashboard_url(:api_key => current_user.api_key, :format => :atom), :id => "feed", :title => "Latest Updates RSS Feed" %>
  <div class="gems">
    <% if @latest_updates.empty? %>
      <p>
        <%= t('.no_subscriptions', :gem_page => link_to(t('.gem_page'), rubygem_path('gemcutter'))) %>
      </p>
    <% else %>
      <ol>
        <% @latest_updates.each do |version| %>
        <li>
          <a href="<%= rubygem_url(version.rubygem) %>">
            <div class="top">
              <strong>
                <%= version.to_title %>
                <% if version.platformed? -%>
                  <%= version.platform %>
                <% end -%>
              </strong>
              <%= t(:time_ago, :time => time_ago_in_words(version.created_at)) %></div>
            <%=h truncate(version.rubygem.versions.latest.info, :length => 100) %>
          </a>
        </li>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>

<div class="mine">
  <h3><%= t('.my_gems') %></h3>
  <div class="gems">
    <% if @my_gems.empty? %>
      <p>
      <%= t('.no_gems', :creating => link_to(t('.creating'), page_url('create')), :migrating => link_to(t('.migrating'), page_url('migrating'))) %>
      </p>
    <% else %>
      <ol>
      <% @my_gems.each do |gem| %>
        <li>
          <div class="downloads">
            <strong><%= gem.downloads %></strong> downloads
          </div>
          <%= link_to gem, gem, :title => gem.versions.latest.try(:summary) %>
        </li>
      <% end %>
      </ol>
    <% end %>
  </div>

  <% unless @subscribed_gems.empty? %>
    <h3><%= t('.my_subscriptions') %></h3>
    <div class="gems">
      <ol>
      <% current_user.subscribed_gems.each do |gem| %>
        <li>
          <div class="downloads">
            <strong><%= gem.downloads %></strong> downloads
          </div>
          <%= link_to gem, gem, :title => gem.versions.latest.try(:summary) %>
        </li>
      <% end %>
      </ol>
    </div>
  <% end %>
</div>

<div class="clear">
</div>
